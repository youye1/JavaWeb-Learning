<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--映射文件的头文件和cfg.xml的头文件存在不同，一定要注意-->
<hibernate-mapping>
    <class name="cn.youye.hibernate.test2.entity.Person" table="person">
        <id name="id" column="id" type="java.lang.String" length="50">
        </id>
        <property name="name" type="java.lang.String" column="name"/>
        <!--使用bag标签来加载List类型属性-->
        <bag name="emails" cascade="all" lazy="true" where="email like '%@%'">
            <key column="email_id"/>
            <one-to-many class="cn.youye.hibernate.test2.entity.Email"/>
        </bag>
    </class>
</hibernate-mapping>